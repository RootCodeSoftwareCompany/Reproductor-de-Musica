<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="557.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="reproductordemusica.ReproductorDeMusicaController">
   <children>
      <Pane prefHeight="400.0" prefWidth="557.0" style="-fx-background-color: #C7C8CA;">
         <children>
            <!-- Etiqueta para mostrar información de la canción -->
            <Label fx:id="labelCancion" layoutX="32.0" layoutY="250.0" text="Canción: -" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <!-- Botón Play -->
            <Button layoutX="32.0" layoutY="305.0" mnemonicParsing="false" onAction="#Play" style="-fx-cursor: hand;" text="Play">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>

            <!-- Botón Pausa -->
            <Button layoutX="109.0" layoutY="305.0" mnemonicParsing="false" onAction="#Pausa" style="-fx-cursor: hand;" text="Pausa">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>

            <!-- Botón Siguiente -->
            <Button layoutX="204.0" layoutY="305.0" mnemonicParsing="false" onAction="#Siguiente" style="-fx-cursor: hand;" text="Siguiente">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>

            <!-- Botón Anterior -->
            <Button layoutX="325.0" layoutY="305.0" mnemonicParsing="false" onAction="#Anterior" style="-fx-cursor: hand;" text="Anterior">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>

            <!-- Botón Subir Volumen -->
            <Button layoutX="400.0" layoutY="305.0" mnemonicParsing="false" onAction="#SubirVolumen" style="-fx-cursor: hand;" text="🔊 +">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>

            <!-- Botón Bajar Volumen -->
            <Button layoutX="480.0" layoutY="305.0" mnemonicParsing="false" onAction="#BajarVolumen" style="-fx-cursor: hand;" text="🔉 -">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
