<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="reproductordemusica.RegisterController">

   <children>

      <!-- Título -->
      <Label layoutX="300.0" layoutY="-6.0" prefHeight="61.0" prefWidth="400.0"
             style="-fx-font-size: 35px; -fx-text-fill: white;" text="Registro de Usuario">
         <font><Font size="43.0" /></font>
      </Label>

      <!-- Botón Volver -->
      <Button layoutX="800.0" layoutY="8.0" onAction="#handleBackToLogin" prefHeight="32.0" prefWidth="167.0"
              style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" 
              text="Volver al Login">
         <font><Font size="16.0" /></font>
      </Button>

      <!-- Panel izquierdo -->
      <Rectangle arcHeight="25.0" arcWidth="25.0" height="500.0" layoutX="50.0" layoutY="50.0"
                 style="-fx-fill: rgba(255, 255, 255, 0.2);" width="400.0" />
      <Pane layoutX="80.0" layoutY="59.0" prefHeight="540.0" prefWidth="350.0"
            style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 4);">
         <children>
            <Label layoutX="25.0" layoutY="12.0" text="Nombre de Usuario" textFill="#34495e">
               <font><Font size="18.0" /></font>
            </Label>
            <TextField fx:id="usernameField" layoutX="22.0" layoutY="36.0" prefHeight="40.0" prefWidth="300.0"
                       promptText="Nombre de Usuario"
                       style="-fx-background-radius: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 10;" />

            <Label layoutX="25.0" layoutY="92.0" text="Contraseña" textFill="#34495e">
               <font><Font size="18.0" /></font>
            </Label>
            <PasswordField fx:id="passwordField" layoutX="22.0" layoutY="116.0" prefHeight="40.0" prefWidth="300.0"
                           promptText="Contraseña"
                           style="-fx-background-radius: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 10;" />

            <Label fx:id="lblRequisitos" layoutX="25.0" layoutY="160.0"
                   text="Mínimo 8 caracteres: letras, números y símbolos."
                   style="-fx-text-fill: gray; -fx-font-size: 11px;" wrapText="true" visible="false" />

            <Label layoutX="25.0" layoutY="172.0" text="Confirmar Contraseña" textFill="#34495e">
               <font><Font size="18.0" /></font>
            </Label>
            <PasswordField fx:id="confirmPasswordField" layoutX="22.0" layoutY="196.0"
                           prefHeight="40.0" prefWidth="300.0" promptText="Confirmar Contraseña"
                           style="-fx-background-radius: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 10;" />

            <!-- Pista de contraseña (añadido) -->
            <Label layoutX="25.0" layoutY="248.0" text="Pista para recordar tu contraseña" textFill="#34495e">
               <font><Font size="18.0" /></font>
            </Label>
            <TextField fx:id="passwordHintField" layoutX="22.0" layoutY="272.0" prefHeight="40.0" prefWidth="300.0"
                       promptText="Palabra o frase" style="-fx-background-radius: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 10;" />

            <Label layoutX="25.0" layoutY="320.0" text="Edad" textFill="#34495e">
               <font><Font size="18.0" /></font>
            </Label>
            <TextField fx:id="ageField" layoutX="86.0" layoutY="312.0" prefHeight="40.0" prefWidth="235.0"
                       promptText="Edad" style="-fx-background-radius: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 10;" />

            <Label layoutX="25.0" layoutY="358.0" text="Preferencias Musicales" textFill="#34495e">
               <font><Font size="18.0" /></font>
            </Label>

            <HBox layoutX="25.0" layoutY="387.0" spacing="10.0">
               <children>
                  <CheckBox fx:id="chkRock" text="Rock" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                  <CheckBox fx:id="chkPop" text="Pop" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                  <CheckBox fx:id="chkJazz" text="Jazz" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                  <CheckBox fx:id="chkClasica" text="Clásica" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
               </children>
            </HBox>
            <HBox layoutX="25.0" layoutY="417.0" spacing="10.0">
               <children>
                  <CheckBox fx:id="chkReggaeton" text="Reggaetón" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                  <CheckBox fx:id="chkElectronica" text="Electrónica" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                  <CheckBox fx:id="chkTrapLatino" text="Trap Latino" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
               </children>
            </HBox>

            <Button layoutX="116.0" layoutY="455.0" onAction="#handleRegister"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="Registrar">
               <font><Font size="20.0" /></font>
            </Button>

            <Label fx:id="messageLabel" layoutX="25.0" layoutY="500.0" prefWidth="300.0" style="-fx-text-fill: red;" />
         </children>
      </Pane>

      <!-- Panel derecho (tabla) -->
      <Rectangle arcHeight="25.0" arcWidth="25.0" height="460.0" layoutX="500.0" layoutY="50.0"
                 style="-fx-fill: rgba(255, 255, 255, 0.2);" width="450.0" />
      <Pane layoutX="530.0" layoutY="59.0" prefHeight="443.0" prefWidth="400.0"
            style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 4);">
         <children>
            <Label layoutX="25.0" layoutY="12.0" text="Usuarios Registrados" textFill="#34495e">
               <font><Font size="18.0" /></font>
            </Label>
            <Label fx:id="lblInstruccionDobleClic" layoutX="25.0" layoutY="35.0"
                   text="Doble clic para iniciar sesión con un usuario" textFill="#34495e">
               <font><Font size="14.0" /></font>
            </Label>
            <TableView fx:id="tablaUsuarios" layoutX="25.0" layoutY="60.0" prefHeight="330.0" prefWidth="350.0">
               <columns>
                  <TableColumn fx:id="colUsuario" prefWidth="100.0" text="Usuario" />
                  <TableColumn fx:id="colEdad" prefWidth="50.0" text="Edad" />
                  <TableColumn fx:id="colPreferencias" prefWidth="200.0" text="Preferencias" />
               </columns>
            </TableView>
            <Button layoutX="25.0" layoutY="400.0" onAction="#handleEliminarUsuario"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;"
                    text="Eliminar Usuario">
               <font><Font size="16.0" /></font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
