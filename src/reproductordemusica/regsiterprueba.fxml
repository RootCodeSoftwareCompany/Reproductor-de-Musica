<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="reproductordemusica.RegisterController" prefHeight="560.0" prefWidth="760.0">
   <children>
      <Pane prefHeight="560.0" prefWidth="760.0" style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e);">
         <children>
            <Label layoutX="192.0" layoutY="10.0" prefHeight="61.0" prefWidth="379.0" style="-fx-font-size: 35px; -fx-text-fill: white;" text="Registro de Usuario">
               <font>
                  <Font size="43.0" />
               </font>
            </Label>

            <Button layoutX="579.0" layoutY="8.0" onAction="#handleBackToLogin" prefHeight="32.0" prefWidth="167.0"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="Volver al Login" />

            <Rectangle arcHeight="25.0" arcWidth="25.0" layoutX="50.0" layoutY="50.0" height="460.0" width="660.0"
                       style="-fx-fill: rgba(255, 255, 255, 0.2);" />

            <Pane layoutX="206.0" layoutY="70.0" prefHeight="440.0" prefWidth="350.0"
                  style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 4);">
               <children>

                  <Label layoutX="25.0" layoutY="14.0" text="Nombre de Usuario" textFill="#34495e">
                     <font><Font size="18.0" /></font>
                  </Label>
                  <TextField fx:id="usernameField" layoutX="22.0" layoutY="39.0" prefHeight="40.0" prefWidth="300.0"
                             promptText="Nombre de Usuario"
                             style="-fx-background-radius: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 10;" />

                  <Label layoutX="25.0" layoutY="88.0" text="Contraseña" textFill="#34495e">
                     <font><Font size="18.0" /></font>
                  </Label>
                  <PasswordField fx:id="passwordField" layoutX="25.0" layoutY="113.0" prefHeight="40.0" prefWidth="300.0"
                                 promptText="Contraseña"
                                 style="-fx-background-radius: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 10;" />

                  <Label layoutX="25.0" layoutY="161.0" text="Confirmar Contraseña" textFill="#34495e">
                     <font><Font size="18.0" /></font>
                  </Label>
                  <PasswordField fx:id="confirmPasswordField" layoutX="25.0" layoutY="186.0" prefHeight="40.0" prefWidth="300.0"
                                 promptText="Confirmar Contraseña"
                                 style="-fx-background-radius: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 10;" />

                  <Label layoutX="25.0" layoutY="234.0" text="Edad" textFill="#34495e">
                     <font><Font size="18.0" /></font>
                  </Label>
                  <TextField fx:id="ageField" layoutX="25.0" layoutY="259.0" prefHeight="40.0" prefWidth="300.0"
                             promptText="Edad"
                             style="-fx-background-radius: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 10;" />

                  <Label layoutX="25.0" layoutY="310.0" text="Preferencias Musicales" textFill="#34495e">
                     <font><Font size="18.0" /></font>
                  </Label>

                  <HBox layoutX="25.0" layoutY="335.0" spacing="10.0">
                     <children>
                        <CheckBox fx:id="chkRock" text="Rock" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                        <CheckBox fx:id="chkPop" text="Pop" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                        <CheckBox fx:id="chkJazz" text="Jazz" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                        <CheckBox fx:id="chkClasica" text="Clásica" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                     </children>
                  </HBox>

                  <HBox layoutX="25.0" layoutY="360.0" spacing="10.0">
                     <children>
                        <CheckBox fx:id="chkReggaeton" text="Reggaetón" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                        <CheckBox fx:id="chkElectronica" text="Electrónica" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                        <CheckBox fx:id="chkTrapLatino" text="Trap Latino" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
                     </children>
                  </HBox>

                  <Button layoutX="105.0" layoutY="395.0" onAction="#handleRegister" prefWidth="140.0" prefHeight="40.0"
                          style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="Registrar" />

                  <Label fx:id="messageLabel" layoutX="25.0" layoutY="440.0" prefWidth="300.0" style="-fx-text-fill: red;" />

               </children>
            </Pane>
         </children>
      </Pane>
   </children>
</AnchorPane>
